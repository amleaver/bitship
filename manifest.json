{
  "name": "BitShip",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Integrates BitBucket with CodeShip",
  "homepage_url": "https://github.com/amleaver/bitship",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "options_page": "src/options/index.html",
  "permissions": [
    "contentSettings",
    "https://bitbucket.org/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://bitbucket.org/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}